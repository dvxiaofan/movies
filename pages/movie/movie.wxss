/* pages/movie/movie.wxss */

.nav {
	display: flex;
	flex-direction: row;
	background-color: #222;
}

.select, .normal {
	width: 32%;
	height: 45px;
	line-height: 45px;
	text-align: center;
	font-size: 13px;
	color: #fff;
}

.select {
	border-bottom: 10px solid #777;
}

.line {
	height: 45px;
	line-height: 45px;
	font-size: 25px;
	color: #666;
}

.items {
	background-color: #f2f2f2;
	height: 1000px;
}

.item {
	width: 32%;
	height: 200px;
	margin-top: 10px;
	text-align: center;
	float: left;
}

.name {
	font-size: 14px;
	font-weight: bold;
	margin: 5px;
}

