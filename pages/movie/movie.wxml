<!--pages/movie/movie.wxml-->
<view class="nav">
	<view id="0" class="{{currentTab == 0 ? 'select' : 'normal'}}" bind:tap="switchNav">上映</view>
	<view class="line">|</view>
	<view id="1" class="{{currentTab == 1 ? 'select' : 'normal'}}" bind:tap="switchNav">影院</view>
	<view class="line">|</view>
	<view id="2" class="{{currentTab == 2 ? 'select' : 'normal'}}" bind:tap="switchNav">我看</view>
</view>

<swiper current="{{currentTab}}" style="height:{{scrHeight}}px">
	<swiper-item>
		<view class="haibao">
			<swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="{{5000}}" duration="{{500}}" circular="{{true}}" style="height: 74px;">
				<block wx:for="{{imgUrls}}">
					<swiper-item>
						<image class="slide-image" src="{{item}}" style="width: 100%; height: 74px;" />
					</swiper-item>
				</block>
			</swiper>	
		</view>
	</swiper-item>
	<swiper-item>
		<view>影院内容</view>
	</swiper-item>
	<swiper-item>
		<view>我看内容</view>
	</swiper-item>
</swiper>